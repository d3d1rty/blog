%nav
  #nav-header
    .text-xs-left
      %a{ href: '', id: 'nav-toggle' }
        = icon 'bars'
      = link_to "#{@page[:title]}", '', class: 'navbar-text'
  #nav-menu
    %ul
      %li
        = form_tag(articles_path, method: 'get', class: 'form-inline', id: 'nav-search') do
          = text_field_tag :search, params[:search], placeholder: 'Search articles...', class: 'form-control', id: 'nav-search-box'
          = submit_tag 'Search', class: 'btn btn-primary'
          %br
      %li
        = link_to 'Home', root_path, class: 'nav-link'
      %li
        = link_to 'About', { controller: '/welcome', action: 'about' }, class: 'nav-link'
      %li
        = link_to 'Projects', { controller: '/welcome', action: 'projects' }, class: 'nav-link'
      %li
        = link_to 'Contact', { controller: '/welcome', action: 'contact'}, class: 'nav-link'
      - if signed_in?
        %li
          = link_to 'Sign out', sign_out_path, method: :delete, class: 'nav-link'
