-@page = { title: 'Create Article' }
.container
  %div{ class: 'row justify-content-center' }
    %div{ class: 'col-xs-12 col-md-10 col-lg-8' }
      = if @article.errors.any?
        #error_explanation
          %h2= "#{pluralize @article.errors.count, 'error'} prohibited this article from being saved:"
          %ul
            =@article.errors.full_messages.each do |e|
              %li= e
    %div{ class: 'col-xs-12 col-md-10' }
      .card
        .card-body
          = form_for :article, url: articles_path do |f|
            .form-group
              =f.label :title
              %br
              =f.text_field :title, class: 'form-control'
            .form-group
              =f.label :subtitle
              %br
              =f.text_area :subtitle, class: 'form-control'
            .form-group
              =f.label 'Tags'
              %br
              =f.text_field :all_tags, class: 'form-control', placeholder: 'Enter tags separated by commas...'
            .form-group
              =f.label :summary
              %br
              =f.text_area :summary, class: 'form-control'
            .form-group
              =f.label :text
              %br
              ~f.text_area :text, class: 'form-control'
            =f.submit 'Post', class: 'btn btn-primary'
        .card-footer
          = link_to 'Back...', articles_path
